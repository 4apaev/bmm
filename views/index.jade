doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport" content="width=device-width")
    meta(name="description", content="Bookmark Manager")
    title Bookmark Manager
    link(rel="stylesheet", href="css/main.css")

  body.dev

    header
      section.ico.nav.search
        div.btn-group
          input(id="search", type="text", placeholder="placeholder")
          button(class="ico find")
      section.ico.nav.filter

        div.btn-group
          input(type="radio", name="filter", class="ico date", value="date")
          input(type="radio", name="filter", class="ico url", value="url")
          input(type="radio", name="filter", class="ico host", value="host", "checked")
          input(type="radio", name="filter", class="ico path", value="path")
          input(type="radio", name="filter", class="ico protocol", value="protocol")


      search.ico.nav.sort
        div.btn-group
          button(class="ico up")
          button(class="ico down")


    div#bookmarks.bmm
    div#results.bmm

    div#editPopup
      h3.date

      input(type="text", class="title")
      input(type="text", class="url")

      div.btn-group
        button(class="ico save")
        button(class="ico remove")
        button(class="ico cancel")

    script(data-main="js/main", src="js/lib/require.js")


