doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport" content="width=device-width")
    meta(name="description", content="Bookmark Manager")
    title Bookmark Manager
    link(rel="stylesheet", href="css/main.css")

  body
    header
      section.nav.sort.btn-group
        h4 sort
        input(type="radio", name="sort", class="ico date", value="date")
        input(type="radio", name="sort", class="ico url", value="url")
        input(type="radio", name="sort", class="ico host", value="host", "checked")
        input(type="radio", name="sort", class="ico path", value="path")
        input(type="radio", name="sort", class="ico protocol", value="protocol")
      section.nav.btn-group.search
        h4 search
        input(type="radio", name="rgx", class="ico end", value="end")
        input(type="radio", name="rgx", class="ico or", value="or", "checked")
        input(id="search", type="text", placeholder="placeholder")
        button.ico.find


    div#bookmarks
    div#results

    section#tools.btn-group
      button(class="ico remove") remove
      button(class="ico edit") edit

    script(data-main="js/main", src="js/lib/require.js")


