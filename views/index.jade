doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport" content="width=device-width")
    meta(name="description", content="Bookmark Manager")
    title Bookmark Manager
    link(rel="stylesheet", href="css/main.css")

  body.layout.base.row

    //- div.layout.row.wrap.box-1

    div.col.box-2#root
      include tree

    div.col.box-8

      nav.btn-group
        a.box-1(href="#search") search
        a.box-1(href="#editor") editor
        a.box-1(href="#colors") colors

      div.tab#search
        include search

      div.tab#editor
        include editor

      div.tab#colors
        include colors

    script(data-main="js/main", src="js/lib/require.js")