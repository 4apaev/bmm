    margin: 0 0 4px

.btn-group
  word-spacing -3px
  button, input
    btn()
    // &:nth-child(1)
    &:first-of-type
      radiusLeft()
    &:last-of-type
      radiusRight()

input[type="text"]
  background: #fff

input[type="radio"]
  size: (step*1.5)
  &:checked
    btnGrHov()
    text-shadow 0 -1px 0 #fff

