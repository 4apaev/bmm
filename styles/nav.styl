.nav
  display: inline-block
  margin: 0 4px 4px 0
  h4
    margin: 0 0 4px

.btn-group
  word-spacing -3px
  button, input
    btn()
    &:first-of-type
      radiusLeft()
    &:last-child
      radiusRight()

input[type="text"]
  background: #fff

input[type="radio"]
  size: (step*1.5)
  &:checked
    btnGrHov()
    text-shadow 0 -1px 0 #fff