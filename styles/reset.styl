article,aside,details,figcaption,figure,footer,header,hgroup,nav,section,summary
  display: block

html,body,input,button,select,ol,li,ul,label,form,h1,h2,h3,h4,h5,h6
  padding: 0
  margin: 0
ol, li, ul
  list-style none

html,button,input,select,textarea
  font-family: sans-serif

[hidden]
  display none

[draggable]
  -webkit-user-select none
  user-select none
  cursor move

a,button,input,select,output
  outline: none
  box-sizing: border-box
  border: none

a, button, [type="radio"], [type="checkbox"]
  cursor pointer
a
  text-decoration none