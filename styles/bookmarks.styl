dirColor  = #777
itemColor = teal

.bmm
  padding step
  font-size: 12px
  box-sizing: border-box
  vertical-align: top

  ul,li,b,q
    vertical-align top
    position relative
    ellipsis()
  li
    stripe(#f0f0f0, #f5f5f5)
    transition all 0.35s
  li[data-children]
    transition max-height 0.25s
    max-height (step*1.5)
    > ul
      transition opacity 0.35s
      padding 0 0 0 step
      opacity: 0
    > b
      display block
      color dirColor
      lh(step*1.5)

  li.show[data-children]
    max-height 9999px
    > ul
      opacity: 1

  li:not([data-children])
    padding (step/4)
    > b
      color itemColor
      font-weight: normal
    > q
      display none

  li.editNode
    w = (step/8)
    padding 0 imp()
    background brdClr imp()
    outline none
    margin step 0
    rd()
    b, q
      background: #fff
      padding: (step/4)
      margin: w (step*2)
      display: block imp()
      &:focus
        background lightyellow
        outline none

    button
      btn()
      width ((step*2) - (step/4))
      font-size: step
      position absolute
      top w
      bottom w
      &:first-child
        radiusLeft()
        left w
      &:last-child
        radiusRight()
        right w

