dirColor  = #777
itemColor = teal

.bmm
  padding step
  font-size: 12px
  box-sizing: border-box
  vertical-align: top

  ul,li,b,q
    vertical-align top
    position relative
    ellipsis()
  li
    stripe(#f0f0f0, #f5f5f5)
  li[data-children]
    transition max-height 0.25s
    max-height (step*1.5)
    > ul
      transition opacity 0.35s
      padding 0 0 0 step
      opacity: 0
    > b
      display block
      color dirColor
      lh(step*1.5)

  li.show[data-children]
    max-height 9999px
    > ul
      opacity: 1

  li:not([data-children])
    padding (step/4)
    > b
      color itemColor
      pointer-events none
      font-weight: normal
    > q
      display none

  [contentEditable]
    w = (step/8)
    padding 0 !important
    background brdClr
    outline none
    rd()
    b, q
      color hovClr
      pointer-events all
      background: #fff
      padding: (step/4)
      margin: w (step*4) w w
      display: block !important
    b
      rd(3px 0 0 0)
    q
      rd(0 0 0 3px)

    button
      btn()
      radiusRight()
      width ((step*4) - (step/4))
      position absolute
      right w
      top w
      bottom w
