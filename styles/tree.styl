.tree
  padding: step
  box-sizing: border-box
  overflow-y: auto
  ol
    display none
  li
    lh:1
    padding-left: sz()
    vertical-align top
    position relative
    min-height step
    &:before
      display: inline-block
      content: ''
      position: absolute
      height: sz()
      border-left: 1px solid
      border-bottom: 1px solid
      box-sizing: border-box
      border-color: tan
    span
      ellipsis: 1
      &:hover
        bg: #eee
        ~ b
          opacity: 1
    b
      opacity: 0
      pos: top 0, right 0
      z-index: 999
      cursor: pointer
      padding: sz(4)
      bg: _red
      &:hover
        opacity: 1



  li.kid:before
    width: sz()
    left: sz(-2)

  li.dad:before
    width: sz()
    left: sz(-2)

  li.kids-0
    color crimson imp

  li.kid
    padding-left: sz(2)

  li input
    appearance:none
    pos: top 0, left 0
    lh:1
    width: 100%
    z-index: 99
    &:before
      color: brdClr

    &:checked ~ ol
      display: flex
      flex-flow: column
      > .dad
          order 1
      > .kid
          order 3
      > .kids-0
          order 2
