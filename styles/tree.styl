.tree
  padding: step
  box-sizing: border-box
  ol
    display none
  li
    lh:1
    padding-left: sz()
    vertical-align top
    position relative
    min-height step
    &:before
      display: inline-block
      content: ''
      position: absolute
      height: sz()
      border-left: 1px solid
      border-bottom: 1px solid
      box-sizing: border-box
      border-color: tan

  li.kid:before
    width: sz()
    left: sz(-2)

  li.dad:before
    width: sz()
    left: sz(-2)

  li.kids-0
    color crimson imp

  li.kid
    padding-left: sz(2)

  li input
    appearance()
    pos: top 0px, left 0px
    lh:1
    width: 100%
    &:before
      color: brdClr

    &:checked ~ ol
      display: flex
      flex-flow: column
      > .dad
          order 1
      > .kid
          order 3
      > .kids-0
          order 2
      span
        ellipsis:1