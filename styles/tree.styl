.bmm
  padding: step
  box-sizing: border-box
  ol ol
    display none

.bmm li
  lh()
  padding-left: sz()
  vertical-align top
  position relative
  min-height step
  &:before
    display: inline-block
    content: ''
    position: absolute
    left: sz(-2)
    width: sz(2)
    height: sz()
    border-left: 1px solid
    border-bottom: 1px solid
    box-sizing: border-box
    border-color: tan

  &.kids-0
    color crimson imp

  li.kid
    // stripe(azure, #fff)
    // &:hover
    //   bg(actClr)
    padding-left: sz(2)


.bmm li input

  appearance()
  absolute(top, left)
  lh()
  width: 100%
  min-height step

  &:before
    color: brdClr

  &:checked ~ ol
    display block
    span
      ellipsis()