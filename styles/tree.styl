.bmm
  padding: step
  box-sizing: border-box
  ol ol
    display none

.bmm li
  lh()
  padding: 0 0 0 step
  vertical-align top
  position relative
  min-height step
  &.kids-0
    color red

.bmm li input

  appearance()
  absolute(top, left)
  lh()
  width: 100%
  min-height step

  &:before
    color: brdClr

  &:checked ~ ol
    display block
    span
      &:hover
        bg(actClr)
    span
      ellipsis()