support-for-ie  = false
vendor-prefixes = official
nibdir = '../node_modules/nib'
@import nibdir
@import 'reset'
@import 'utils'
@import 'icons'

html, body
  height 100%

.hidden
  display: none

body
  color txtClr
  font-size: 12px
  lh(1,'*')
  font-family: Helvetica, arial, freesans, clean, sans-serif

.dev
  rhytmGr()

sidebarWidth = sz(24, '*')

scrollAxis()
  overflow-x: arguments ? auto : hidden
  overflow-y: arguments ? hidden : auto

#bookmarks
  scrollAxis()
  fixed(top left)
  bottom: 0
  width sidebarWidth
  box-shadow 1px 0 0 lighten(brdClr,20)

#results
  position: fixed
  top: sz(5, '*')
  left: sidebarWidth
  bottom: 0
  right: 0
  overflow-y: auto
  overflow-x: hidden

.hideRes
  #bookmarks
    width: 100%
  #results
    left: 100%

.hideTree
  #bookmarks
    width: 0
  #results
    left: 0

header
  margin-left sidebarWidth
  box-shadow 0 1px 0 lighten(brdClr,20)

#editPopup
  display: none
