@import 'utils/vars'
@import 'utils/shortcuts'
@import 'utils/functions'
@import 'utils/colors'
@import 'utils/buttons'
@import 'layout'
@import 'reset'

html, body
  height 100%

body
  color txtClr
  font-size: 12px
  lh: 1
  font-family: Helvetica, arial, freesans, clean, sans-serif

.lum
  padding step

#root
  overflow-x: hidden
  overflow-y: auto

nav a
  background skyblue
  flex 1
  lh: 2,'*'
  text-align: center

.tab
  shd(0 0 0 1px #000)
  padding step
  order 2
  transition all .4s
  &:target
    order 1
    flex 9


