iconFont('../css/font', 'fontello')

$glyph
  font-family: "fontello"
  display: inline-block
  text-decoration: none
  margin-right: 4px
  size: 16px
  font-weight: normal
  font-style: normal

.ico:before
  @extend $glyph

// sort options
.title[name="sort"]:before
  content: "\e809"
.date[name="sort"]:before
  content: "\e81d"
.url[name="sort"]:before
  content: "\e80b"
.host[name="sort"]:before
  content: "\e866"
.path[name="sort"]:before
  content: "\e861"
.protocol[name="sort"]:before
  content: "\e86a"

// regex options
.end[name="rgx"]:before
  content: "\e851"
.or[name="rgx"]:before
  content: "\e834"
.case[name="rgx"]:before
  content: "\e834"
.whole[name="rgx"]:before
  content: "\e809"

.ico.find:before
  content: "\e800"

// folders

a.ico:not(.toggle):before
  content: '\e88b'
a.ico.toggle:before
  content: '\e893'
  [data-children="0"] > &
    content: '\e88c'
  .show > &
    content: '\e894'