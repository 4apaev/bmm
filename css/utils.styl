step = 16px
txtClr = #333
midClr = #ddd
brdClr = #ccc
actClr = skyblue
hovClr = steelblue
selClr = olive

gradient1 = #fff
gradient2 = #ddd

bgClr = #eee
btnClr = slategrey
a
  color btnClr

headGr()
  background #fff linear-gradient(#f9f9f9, #f3f3f3) repeat-x
btnGr()
  background #fff linear-gradient(#fff, #eee) repeat-x
btnGrHov()
  background #ddd linear-gradient(#ddd, #eee) repeat-x

lh(h = (step*2))
  line-height h

brd()
  if arguments
    box-shadow arguments
  else
    box-shadow 0 0 0 1px #ccc

btn()
  display inline-block
  position relative
  padding 0 (step/2)
  margin 0
  border none
  btnGr()
  brd()
  line-height: (step*1.5)
  color btnClr
  text-shadow 0 1px 0 #fff
  -webkit-appearance button
  &:focus
    btnGrHov()
    text-shadow 0 -1px 0 #fff

radiusTop(n = 3px)
  border-radius n n 0 0

radiusBottom(n = 3px)
  border-radius 0 0 n n

radiusLeft(n = 3px)
  border-radius n 0 0 n

radiusRight(n = 3px)
  border-radius 0 n n 0

minsize()
  if length(arguments) == 1
    min-width: arguments[0]
    min-height: arguments[0]
  else
    min-width: arguments[0]
    min-height: arguments[1]

poza(t=false, r=false, bt=false, l=false )
  position absolute
  if t
    top t
  if r
    right r
  if bt
    bottom bt
  if l
    left l

circle(sz)
  size: (sz)
  border-radius 50%

center(w,h)
  width w
  height h
  position absolute
  top 50%
  left 50%
  margin-top (h/-2)
  margin-left (w/-2)

posall(n)
  position absolute
  top n
  right n
  bottom n
  left n

.poszero
  posall(0)
